@using clinic.BLL.ModelVM.Department
@model CreateDepartmentVM
@{
    Layout = "~/Views/Shared/_AdminDashBoardLayout.cshtml";
    ViewData["Title"] = "Create Department";
}


<div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Add Department</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <form enctype="multipart/form-data" asp-action="CreateDepartment" asp-controller="AdminDashBoard" method="post">
                            <div class="form-group">
                                <label>Department Name</label>
                                <input asp-for="DepartmentName" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea asp-for="Description" cols="30" rows="4" class="form-control"></textarea>
                            </div>
                            <div class="col-sm-6">
                            <div class="form-group">
                                    <label>Department Image</label>
                                    <input asp-for="DepartmentImg" type="file" class="form-control" />
                                    <span asp-validation-for="DepartmentImg" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="m-t-20 text-center">
                                <button class="btn btn-primary submit-btn">Create Department</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>